    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/activity_hospital_one_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="80dp"
        android:text="hospital1"
        android:background="#D5FFA6"
        android:textSize="20dp" />

    <Button
        android:id="@+id/activity_hospital_second_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="80dp"
        android:background="#F5FFAE"
        android:text="hospital2"
        android:textSize="20dp" />

    <Button
        android:id="@+id/activity_hospital_third_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="80dp"
        android:text="hospital3"
        android:background="#D5FFA6"
        android:textSize="20dp"
        />

