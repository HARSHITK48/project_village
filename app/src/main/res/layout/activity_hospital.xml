<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/activity_hospital_call_ambulance_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="80dp"
        android:text="CALL AMBULANCE"
        android:background="#D5FFA6"
        android:textSize="20dp" />

    <Button
        android:id="@+id/activity_hospital_location_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="80dp"
        android:background="#F5FFAE"
        android:text="LOCATION/INFO"
        android:textSize="20dp"  />

    <Button
        android:id="@+id/activity_hospital_call_doctor_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="80dp"
        android:text="CALL DOCTOR"
        android:background="#D5FFA6"
        android:textSize="20dp"
        />

</LinearLayout>