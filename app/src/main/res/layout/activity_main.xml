<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5"

    android:background="#FFFFFF"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/activity_main_text_view_heading"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/activity_main_hospital_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="150dp"
        android:background="#9CFFF5"
        android:textColor="#000"
        android:drawableRight="@drawable/ic_local_hospital_black_24dp"
        android:drawablePadding="5dp"

        android:textSize="15dp" />

    <Button
        android:layout_width="fill_parent"
        android:id="@+id/activity_main_transport_button"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:drawableRight="@drawable/ic_directions_bus_black_24dp"
        android:textSize="15dp"
        android:background="#9CFFF5"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_main_education_button"
        android:drawableRight="@drawable/ic_school_black_24dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:background="#9CFFF5"
        />





    <TextView
        android:hint="language"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_main_language"/>


</LinearLayout>
    </ScrollView>